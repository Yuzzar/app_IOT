<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FHome">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/judul"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="@color/white"
                app:cardBackgroundColor="@color/Primary3"
                app:cardCornerRadius="8dp">
            
                <TextView
                    android:id="@+id/pompa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pompa "
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/Primary3"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/waterdrop"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/image1" />


                <LinearLayout
                    android:layout_marginTop="150dp"
                    android:layout_width="match_parent"
                    android:background="@color/seed"
                    android:layout_height="50dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/pompa_but"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:background="@color/seed"
                    android:text="Pompa"
                    android:textColor="@color/Primary2"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginTop="150dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/info"/>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/edit_text"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/Toren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toren "
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/Primary3"
                    android:textAlignment="center"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/watertank2" />

                <LinearLayout
                    android:layout_marginTop="150dp"
                    android:layout_width="match_parent"
                    android:background="@color/seed"
                    android:layout_height="50dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/toren_but"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:background="@color/seed"
                    android:text="Toren"
                    android:textColor="@color/Primary2"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginTop="150dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/info"/>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/layout1"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="@color/white"
                app:cardBackgroundColor="@color/Primary3"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/suhu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suhu "
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/Primary3"
                    android:textAlignment="center"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/temprature_logo" />

                <LinearLayout
                    android:layout_marginTop="150dp"
                    android:layout_width="match_parent"
                    android:background="@color/seed"
                    android:layout_height="50dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/suhu_but"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:background="@color/seed"
                    android:text="Suhu"
                    android:textColor="@color/Primary2"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginTop="150dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/info"/>




            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>